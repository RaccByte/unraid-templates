<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <TemplateURL>https://github.com/RaccByte/unraid-templates/blob/main/PostgreSQL18.xml</TemplateURL>
  <Date>2026-01-30</Date>
  <Beta>False</Beta>
  <Category>Network:Management:Productivity:Tools</Category>
  <Name>PostgreSQL18</Name>
  <Project>https://www.postgresql.org/</Project>
  <Overview>
    PostgreSQL is a powerful, open source object-relational database system.[br]
    This template uses the official Postgres Docker image @ https://hub.docker.com/_/postgres/
  </Overview>
  <Registry>https://registry.hub.docker.com/_/postgres/</Registry>
  <GitHub>https://github.com/docker-library/postgres</GitHub>
  <Repository>postgres:18</Repository>
  <Support></Support>
  <WebUI/>
  <Banner>https://github.com/RaccByte/unraid-templates/blob/main/images/PostgreSQL-banner.png?raw=true</Banner>
  <Icon>https://github.com/RaccByte/unraid-templates/blob/main/images/PostgreSQL-logo.png?raw=true</Icon>
  <Privileged>false</Privileged>
  <Network Default="bridge">bridge</Network>
  <Config Name="PostgreSQL Superuser Name" Target="POSTGRES_USER" Default="postgres" Mode="" Description="Variable: PostgreSQL Superuser Name" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="PostgreSQL Superuser Password" Target="POSTGRES_PASSWORD" Default="" Mode="" Description="Variable: PostgreSQL Superuser Password" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="PostgreSQL Database Name" Target="POSTGRES_DB" Default="postgres" Mode="" Description="Variable: Initial PostgreSQL Database" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Timezone" Target="TZ" Default="America/Chicago" Description="Variable: Container Timezone" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="PostgreSQL Data Path" Target="/var/lib/postgresql" Default="/mnt/cache/postgresql18" Mode="rw" Description="Path: PostgreSQL Data Directory" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="PostgreSQL Database Port" Target="5432" Default="5432" Mode="tcp" Description="Port: PostgreSQL Database TCP Port" Type="Port" Display="always" Required="true" Mask="false"/>
</Container>
